<%- include('../partials/header') %>

<h1>Flights Info</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>FlightNo</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>

<% flights.forEach(function(f) { %>
    <tr>
      <td><%= f.airline %></td>
      <td><%= f.airport %></td>
      <td><%= f.flightNo %></td>
      <td><%= f.departs %></td>

      <td><%= f.departs ? 'Yes' : 'Nope' %></td>
      <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
          </tr>

      <% }); %>

<%- include('../partials/footer') %>